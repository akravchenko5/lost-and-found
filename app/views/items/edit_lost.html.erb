<div class="new-item-page-background">

</div>

<div class="menu-title">
  <h2>Edit lost item</h2>
</div>

<div class="new-found-background-green">

</div>

<div class="new-lost-background-dark">
  <div class="new-item-form-lost">
    <%= simple_form_for @item do |f| %>
      <%= f.input :title, :input_html => { placeholder: 'What have you lost?', autocomplete: 'off' } %>
      <div class="search-dropdown">
        <div class="search-dropdown-results found-dropdown">
        </div>
      </div>
      <%= f.input :description, :input_html => {:rows => 3, placeholder: 'Describe the item you have lost', autocomplete: 'off'} %>
      <%= f.input :category, collection: Item::CATEGORIES, prompt: 'Delect a category', :input_html => { placeholder: 'Please choose category' } %>
      <%= f.input :address, :input_html => { placeholder: 'Where did you lose it?', required: true } %>
      <%= f.input :reward, :input_html => { placeholder: 'Do you want to give a finders fee?', autocomplete: 'off' } %>
      <div class="button-wrap">
      <%= f.button :submit, class:"button-green" %>
      <div class="button-space"></div>
      <%= link_to "Lost Items", lost_items_path, class:"button-white"  %>
      </div>
    <% end %>

  </div>
</div>
