<div class="home-page-wrap">

  <div class="home-content-wrap">

    <div class="home-loaction-info">
      <%= image_tag 'map_green.svg', class: 'home-map-marker' %>
        <h3><%= Geocoder.search(@location).first.city %>, <%= Geocoder.search(@location).first.country %></h3>
    </div>
    <h1><span class="counter green">3657</span> lost</h1>
    <h1><span class="counter green">2356</span> found</h1>
      <%= simple_form_for :query, html: { class: "home-form"}, url: items_path, method: 'get' do |f| %>
        <%= f.input :title, input_html: { placeholder: 'Search nearby...', autocomplete: 'off' }, label: false, id: "home-input" %>
        <%= f.button :submit, "", id: "home-search-button"%>
      <% end %>
  </div>
</div>
