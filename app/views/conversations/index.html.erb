<div class="show-page-wrap">
  <div class="show-container-list">
    <h2><span class="green">Your messages</span></h2>
    <% if @conversations.any? %>
      <% @conversations.each do |conversation| %>
        <div class="messages-list-card">
          <% if current_user == conversation.keeper %>
          <h5><%= link_to (conversation.seeker.first_name), user_path(conversation.seeker.id) %></h5>
          <% else %>
          <h5> <%= link_to (conversation.keeper.first_name), user_path(conversation.keeper.id) %></h5>
          <% end %>
          <div class="messages-list-details">
            <div class="messages-list-messages">
              <%= link_to (current_user == conversation.keeper ? conversation.messages.last.content : conversation.messages.last.content), conversation %>
            </div>
            <div class="messages-list-time">
              <%= distance_of_time_in_words(conversation.messages.last.created_at, Time.now, options = {}) %> ago
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


