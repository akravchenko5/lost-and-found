<div class="show-page-wrap">
  <div class="show-container-list">
    <h2><span class="green">Your messages</span></h2>
    <% if @conversations.any? %>
      <% @conversations.each do |conversation| %>
        <div class="messages-list-card">
          <h5>
            <%= link_to other_party(conversation), conversation %>
          </h5>

          <div class="messages-list-details">
            <div class="messages-list-messages">
              <%= link_to conversation.messages.first.content, conversation %>
            </div>
            <div class="messages-list-time">
              <%= distance_of_time_in_words(conversation.messages.first.created_at, Time.now, options = {}) %> ago
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="sorry-message"><h5>Your inbox is empty</h5></div>
    <% end %>
  </div>
</div>


