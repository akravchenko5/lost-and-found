<div class="sign-in-page-wrap">

  <div class="logo-wrap">
    <div class="logo-big">
      <div class="logo-small"></div>
    </div>
  </div>

  <div class="logo-title">
    lost & found
  </div>

  <div class="tag-line">Join our community and find your lost belongings!</div>


  <div class="button-wrap">
    <div class="button-green">Log in</div>
    <div class="button-space"></div>
    <<%= link_to "Sign up", new_registration_path(resource_name), class: 'button-green' %>
  </div>
  <div class="sign-in-form-wrapper">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="sign-in-form">

        <div class="sign-in-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "sasdsa" }
                      %>

          <div class="button-space"></div>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <div class="button-space"></div>

          </div>

        </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'button-white' %>
      </div>
    <% end %>

    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %>
  </div>


</div>



